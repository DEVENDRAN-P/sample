{
  "name": "Bill",
  "type": "object",
  "properties": {
    "image_url": {
      "type": "string"
    },
    "shop_id": {
      "type": "string"
    },
    "shop_name": {
      "type": "string"
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "product_name": {
            "type": "string"
          },
          "price": {
            "type": "number"
          },
          "quantity": {
            "type": "number"
          },
          "unit": {
            "type": "string"
          }
        }
      }
    },
    "total_amount": {
      "type": "number"
    },
    "status": {
      "type": "string",
      "enum": [
        "pending",
        "processed",
        "verified",
        "rejected"
      ],
      "default": "pending"
    },
    "points_earned": {
      "type": "number",
      "default": 0
    }
  },
  "required": [
    "image_url"
  ]
}